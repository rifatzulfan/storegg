<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Bank</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/dashboard">Beranda</a></li>
                        <li class="breadcrumb-item"><a href="/bank">Bank</a></li>
                        <li class="breadcrumb-item active">Ubah</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Form Ubah Bank "<%= payment.type %>"</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/payment/edit/<%= payment._id %>?_method=PUT" method="POST">
                <div class="card-body">
                    <div class="form-group">
                        <label for="type">Masukan Jenis Pembayaran</label>
                        <input type="text" name="type" value="<%= payment.type %>" class="form-control" id="type"
                            placeholder="Masukan Jenis Pembayaran" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Pilih Bank</label>
                        <div class="select2-purple">
                            <select class="form-control select2" multiple="multiple" name="banks"
                                data-placeholder="Pilih Bank" required style="width: 100%;">
                                <% banks.forEach(bank=> { %>
                                <option value="<%= bank._id %>" <% payment.banks.forEach(paymentBank => { %>
                                    <% if(bank._id.toString() === paymentBank?._id.toString()) { %> selected <% } %>
                                    <% }) %>>
                                    <%= bank.name %> - <%= bank.nameBank %> -
                                    <%= bank.noRekening %>
                                </option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Simpan</button>
                </div>
            </form>
        </div>
        <!-- /.container-fluid -->
    </section>
</div>

<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>