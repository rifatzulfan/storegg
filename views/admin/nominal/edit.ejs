<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Nominal</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/dashboard">Beranda</a></li>
                        <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
                        <li class="breadcrumb-item active">Edit</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Form Edit Nominal "<%= nominal.coinName %>"</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/nominal/edit/<%= nominal._id %>?_method=PUT" method="POST">
                <div class="card-body">
                    <div class="form-group">
                        <label>Nama Koin</label>
                        <select class="form-control select2" name="coinName" required style="width: 100%;">
                            <option value="gold" <% if(nominal.coinName === "gold") { %> selected <% } %>>Gold</option>
                            <option value="diamond" <% if(nominal.coinName === "Diamond") { %> selected <% } %>>Diamond
                            </option>
                            <option value="jewel" <% if(nominal.coinName === "jewel") { %> selected <% } %>>Jewel
                            </option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Masukan Jumlah Nominal</label>
                        <input type="number" value="<%= nominal.coinQuantity %>" name="coinQuantity"
                            class="form-control" id="coinQuantity" placeholder="Masukan Jumlah Koin" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Masukan Harga</label>
                        <input type="number" value="<%= nominal.price %>" name="price" class="form-control" id="price" placeholder="Masukan Harga"
                            required>
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Simpan</button>
                </div>
            </form>
        </div>
        <!-- /.container-fluid -->
    </section>
</div>

<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>