<div class="card-body">
    <table id="example2" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>No</th>
                <th>Nama Game</th>
                <th>Item</th>
                <th>Total Harga</th>
                <th>Status</th>
                <th>Nama Player</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody>
            <% for(let i = 0; i < transaction.length; i++){ %>
            <tr>
                <td><%=i+1 %></td>
                <td>
                    <ul class="list-inline">
                        <li class="list-inline-item">
                            <img src="https://store-gg-si.herokuapp.com/uploads/<%= transaction[i].historyVoucherTopup.thumbnail %>"
                                alt="avatar" width="48" height="48">
                        </li>
                    </ul>
                    <%= transaction[i]?.historyVoucherTopup?.gameName %>
                    <br>
                    <%= transaction[i]?.historyVoucherTopup?.category %>
                </td>
                <td>
                    <%= transaction[i].value %>
                </td>
                <td>
                    <%= transaction[i]?.historyVoucherTopup?.coinQuantity %>
                    <%= transaction[i]?.historyVoucherTopup?.coinName %>
                </td>
                <td>
                    <% if(transaction[i].status === 'pending') { %>
                    <span class="badge badge-warning">
                        <%= transaction[i].status %>
                    </span>
                    <% } else if(transaction[i].status === 'success') { %>
                    <span class="badge badge-success">
                        <%= transaction[i].status %>
                    </span>
                    <% } else { %>
                    <span class="badge badge-danger">
                        <%= transaction[i].status %>
                    </span>
                    <% } %>
                </td>
                <td>
                    <%= transaction[i]?.player?.name ?? '-' %>
                </td>

                <td>
                    <form style="display: inline-block;"
                        action="/transaction/status/<%= transaction[i]._id %>?status=failed&_method=PUT" method="POST">
                        <button class="btn btn-warning btn-sm">
                            <i class="fas fa-times mr-2"></i>
                            Tolak</button>
                    </form>
                    <form style="display: inline-block;"
                        action="/transaction/status/<%= transaction[i]._id %>?status=success&_method=PUT" method="POST">
                        <button class="btn btn-info btn-sm">
                            <i class="fas fa-check mr-2"></i>
                            Terima</button>
                    </form>
                    <form style="display: inline-block;"
                        action="/transaction/delete/<%= transaction[i]._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger btn-sm">
                            <i class="fas fa-trash mr-2"></i>
                            Hapus</button>
                    </form>
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>
</div>